}
if (var.x-datadome-headers ~ "(?i)(^| )+charset( |$)+") {
set resp.http.charset = urldecode(req.http.x-datadome-headers-pairs:charset);
}
if (var.x-datadome-headers ~ "(?i)(^| )+cache-control( |$)+") {
